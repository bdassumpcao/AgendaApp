<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE xml>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <EditText
                        android:id="@+id/edt_sql"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:ems="10" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <RadioGroup
                        android:id="@+id/radioGroup1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <RadioButton
                            android:id="@+id/selectAgenda"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="SELECT AGENDA" />

                        <RadioButton
                            android:id="@+id/selectTarefa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SELECT TAREFA" />
                    </RadioGroup>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <Button
                        android:id="@+id/btExecutar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button"
                        android:onClick="executarSql"
                        android:text="@string/btExecutar" />
                </TableRow>
                
               <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                   <TextView
                       android:id="@+id/result"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="TextView" />
               
               </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>