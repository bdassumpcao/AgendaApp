<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE xml>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="wrap_content"
     android:layout_height="match_parent"
     android:orientation="vertical"
     android:paddingLeft="5dp"
     android:paddingRight="5dp"
     android:paddingStart="5dp">
        
        <LinearLayout
            android:id="@+id/layout_lvTarefas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:background="@layout/corner"  >
                
                <TableRow
				    android:id="@+id/tableRow2"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content" > 
				     
				    <TextView
				        android:id="@+id/txtv_Descricao"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_vertical"
				        android:gravity="start"
				        android:textColor="@color/event_color_05"
				        android:textSize="17sp" />
   
				 </TableRow>  
				 
                 <TableRow
				    android:id="@+id/tableRow1"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content" > 
				     
				    <TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_vertical"
				        android:gravity="start"
				        android:text="@string/responsavel"
				        android:textStyle="bold"
				        android:textSize="17sp" />
				    	
				    <TextView
				        android:id="@+id/txtv_nmResponsavel" 
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_vertical"
				        android:gravity="start"
				        android:textSize="17sp" />
 
				 </TableRow>   
				 
                 <TableRow
				    android:id="@+id/tableRow4"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content" > 
				     
				    <TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_vertical"
				        android:gravity="start"
				        android:textStyle="bold"
				        android:text="@string/para"
				        android:textSize="18sp" />
				    	
				    <TextView
				        android:id="@+id/txtv_nmDestinatarios"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_vertical"
				        android:gravity="start"
				        android:textSize="17sp" />
 
				 </TableRow>   

				<TableRow 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content">
				    
				    <TextView 
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_vertical"
				        android:gravity="start"
				        android:text="@string/dtLanc"
				        android:textStyle="bold"
				        android:textSize="17sp"/>
				    
				    <TextView 
				        android:id="@+id/txtv_nmDataLanc"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_vertical"
				        android:gravity="start"
				        android:textSize="18sp"/>
				    
				</TableRow>
				
				<TableRow 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content">
				    
				    <TextView 
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="start"
				        android:text="@string/dtConc"
				        android:textStyle="bold"
				        android:textSize="17sp"/>
				    
				    <TextView 
				        android:id="@+id/txtv_nmDataConc"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_vertical"
				        android:gravity="start"
				        android:textSize="18sp"/>
				    
				</TableRow>
                 
			    <TableRow
				    android:id="@+id/tableRow3"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content" >   

				    <RelativeLayout
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content" >

					    <CheckBox
					        android:id="@+id/check_tarefa"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:text="@string/concluido"
					        android:textSize="17sp" />

					    <Button
					        android:id="@+id/btn_deletar"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_alignParentRight="true"
					        android:layout_alignParentTop="true"
					        android:layout_alignParentEnd="true"
					        android:background="@android:drawable/ic_delete"
					        android:minHeight="30dip"
					        android:minWidth="30dip"
					        android:padding="5dp" />

					</RelativeLayout> 
				</TableRow>
    			
		</LinearLayout>
</RelativeLayout>
